<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quarter_plan_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/course_plan_background"
        android:layout_width="336dp"
        android:layout_height="152dp"
        app:srcCompat="@drawable/course_plan_item"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="96dp" />


    <TextView
        android:id="@+id/course_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/course_plan_background"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="45dp"
        android:layout_toStartOf="@+id/course_divider"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="@string/course"
        android:textSize="32sp"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="180dp" />

    <ImageView
        android:id="@+id/course_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/course_plan_background"
        android:layout_alignBottom="@+id/course_plan_background"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="40dp"
        android:tint="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@+id/course_plan_background"
        app:layout_constraintTop_toTopOf="@+id/course_plan_background"
        app:srcCompat="@android:drawable/status_bar_item_background"
        tools:layout_editor_absoluteX="225dp" />

    <TextView
        android:id="@+id/course_grading_option_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/course_plan_background"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/p_np_caps"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/course_units_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_grading_option_text"
        android:layout_alignStart="@+id/course_grading_option_text"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/_4_0"
        android:fontFamily="@font/montserrat"
        android:textSize="25sp"/>
</RelativeLayout>